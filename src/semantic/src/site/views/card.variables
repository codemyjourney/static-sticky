/*******************************
    User Variable Overrides
*******************************/
@padding: 1.5rem;
@boxShadow: 0 2px 4px rgba(0, 0, 0, 0.15), 0 2px 6px rgba(0, 0, 0, 0.2);
@transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);

@linkHoverBorder: none;
@linkHoverBoxShadow: 0 14px 28px rgba(0, 0, 0, 0.25),
  0 10px 10px rgba(0, 0, 0, 0.22);
@linkHoverTransform: none;
